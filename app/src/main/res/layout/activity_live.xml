<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashbackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/descolor"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/descolor"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:text="GO LIVE"
                    android:background="@drawable/goback"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go Live"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:textSize="23dp"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/postimage"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/camera"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/goliveback"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@color/golive"
                    android:textColor="@color/white"
                    android:text="LIVE"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is your live preview"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textAlignment="center"
                    android:layout_marginTop="130dp"/>

                <LinearLayout
                    android:layout_marginTop="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Going home"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:layout_marginLeft="20dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/image1"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Adria Rae"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="5dp"/>
                            <androidx.constraintlayout.utils.widget.ImageFilterButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_blue_mark"
                                android:layout_marginTop="13dp"
                                android:layout_marginLeft="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="200dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_chart"
                        android:layout_gravity="end"/>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:paddingLeft="30dp"
                android:hint="Going home"
                android:textColorHint="@color/white"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edittextbackground"/>

            <EditText
                android:background="@drawable/edittextbackground"
                android:textColorHint="@color/descolor"
                android:hint="  Pulvinar amet, vitae eget euismod ullamcorper portti...."
                android:textColor="@color/descolor"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:inputType="textMultiLine"
                android:lines="10"
                android:gravity="top|start"
                android:maxLines="15"
                android:scrollbars="vertical"/>

            <LinearLayout
                android:id="@+id/golivebtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/liveback"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_net"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Schedule Live"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/descolor"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>