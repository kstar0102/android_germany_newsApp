<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/navcolor"
    app:cardBackgroundColor="@color/navcolor"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/search_character"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/image1"
            android:layout_margin="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Username"
                android:layout_marginTop="22dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/search_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admin@admin.com"
                android:textColor="@color/descolor"
                android:layout_marginTop="5dp"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>