<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.germeny.myapplication.auth.fragment.HomeFragment"
        android:label="title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.germeny.myapplication.auth.fragment.SearchFragment"
        android:label="title_dashboard"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.germeny.myapplication.auth.fragment.ChatFragment"
        android:label="title_notifications"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.germeny.myapplication.auth.fragment.ProfileFragment"
        android:label="title_notifications"
        tools:layout="@layout/fragment_profile" />
</navigation>